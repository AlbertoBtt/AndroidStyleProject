<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="fontFamily">@font/coolvetica</item>
        <item name="android:windowBackground">@color/black_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
        <item name="buttonStyle">@style/CKButton</item>
        <item name="android:textViewStyle">@style/Titles</item>
        <item name="checkboxStyle">@style/Checkbox</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="android:itemBackground">@color/black_background</item>

    </style>
    <style name="CKButton" parent="android:style/Widget.Button">
        <item name="android:textSize">30sp</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/coolvetica</item>
    </style>
    <style name="Titles" parent="android:Widget.TextView">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/coolvetica</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/grey</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyActionBar.MenuTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="background">@color/black_background</item>
    </style>

    <style name="Checkbox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
    <style name="RadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>

    </style>

    <style name="Settings" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="android:fontFamily">@font/coolvetica</item>
        <item name="android:background">@color/black_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:itemBackground">@color/grey</item>
        <item name="android:textSize">19sp</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
    </style>

</resources>